<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!-- Servlets -->
    <servlet>
        <servlet-name>OP1Servlet</servlet-name>
        <servlet-class>ifpb.pod.q12.node3.server.Op1ServletImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OP1Servlet</servlet-name>
        <url-pattern>/op1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OP2Servlet</servlet-name>
        <servlet-class>ifpb.pod.q12.node3.server.UpdateOp2ServletImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OP2Servlet</servlet-name>
        <url-pattern>/op2/update</url-pattern>
    </servlet-mapping>

    <!--<welcome-file-list>-->
