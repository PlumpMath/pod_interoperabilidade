<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

  <!-- Servlets -->
  <servlet>
    <servlet-name>OP2Servlet</servlet-name>
    <servlet-class>ifpb.pod.q12.node2.Op2ServletImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>OP2Servlet</servlet-name>
    <url-pattern>/op2</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>OP1Servlet</servlet-name>
    <servlet-class>ifpb.pod.q12.node2.UpdateOp1ServletImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>OP1Servlet</servlet-name>
    <url-pattern>/op1/update</url-pattern>
  </servlet-mapping>

</web-app>